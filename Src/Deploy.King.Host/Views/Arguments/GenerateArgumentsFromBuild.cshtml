@model List<Deploy.King.Host.Models.Arguments.ArgumentModel>


@using (Html.BeginForm("GenerateArgumentsFromBuild", "Arguments", new { projectId = ViewBag.ProjectId }))
{
    <fieldset>
    <legend>Arguments</legend>
        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="editor-label">
                @Html.LabelFor(x => x[i].Name)
            </div>
            <div class="editor-field">
                @Html.HiddenFor(x => x[i].ProjectId)
                @Html.HiddenFor(x => x[i].Name)
                @Model[i].Name
            </div>

            <div class="editor-label">
                @Html.LabelFor(x => x[i].Value)
            </div>
            <div class="editor-field">
                @Html.EditorFor(x => x[i].Value)
                @Html.ValidationMessageFor(x => x[i].Value)
            </div>
        }

        <p>
            <input type="submit" value="Save" />
        </p>

    </fieldset>
}